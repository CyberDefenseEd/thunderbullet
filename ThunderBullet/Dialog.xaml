<Window x:Class="ThunderBullet.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThunderBullet - Alert" Height="180" Width="400" Background="{DynamicResource BackgroundMain}">
    <Grid Margin="10">
        <!-- Optional Title for the Dialog -->
        <TextBlock x:Name="TitleTextBlock" Text="Alert" FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"
                   Foreground="{DynamicResource ForegroundMain}"/>

        <!-- Message Content -->
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,40,10,60"
                   Foreground="{DynamicResource ForegroundMain}"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button x:Name="YesButton" Content="Yes" Width="75" Margin="10,0" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Content="No" Width="75" Margin="10,0" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
